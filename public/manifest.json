{
  "manifest_version": 3,
  "name": "Focus Timer - Pomodoro Productivity",
  "version": "1.0.0",
  "description": "A beautiful Pomodoro timer with motivational quotes and productivity tracking",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "index.html",
    "default_title": "Focus Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "fullapp.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}